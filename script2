#Time zone
ln -sf /usr/share/zoneinfo/Europe/London /etc/localtime

#Set hostname
echo archpc > /etc/hostname

#Install bootctl
bootctl install

#Configure  EFI
echo -e "title Archlinux\n" >> /boot/loader/entries/arch.conf
echo -e "linux /vmlinuz-linux\n" >> /boot/loader/entries/arch.conf
echo -e "initrd /initramfs-linux.img\n" >> /boot/loader/entries/arch.conf
echo options root=PARTUUID="$(findmnt -fn -o PARTUUID /dev/sda3) >> /boot/loader/entries/arch.conf
echo rw > /boot/loader/entries/arch.conf >> /boot/loader/entries/arch.conf

rm script*

