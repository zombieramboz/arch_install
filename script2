/boot/loader/entries/arch.conf#Time zone
ln -sf /usr/share/zoneinfo/Europe/London /etc/localtime

#Set hostname
echo archpc > /etc/hostname

#Install bootctl
bootctl install

#Configure  EFI
rm /boot/loader/entries/arch.conf
echo -e "title Archlinux" > /boot/loader/entries/arch.conf
echo -e "linux /vmlinuz-linux" >> /boot/loader/entries/arch.conf
echo -e "initrd /initramfs-linux.img" >> /boot/loader/entries/arch.conf
echo options root=PARTUUID="$(findmnt -fn -o PARTUUID /dev/sda3)" rw >> /boot/loader/entries/arch.conf

#Wireless
pacman -S wireless_tools
#wireless_device = iwconfig 2>/dev/null | grep -o "^\w*"
echo $wireless_device
echo Interface="$wireless_device" > /etc/netctl/wireless_profile 
#echo wireless_device >> /etc/netctl/wireless_profile 

#Remove script
rm script*

#Reboot machine
reboot

