#Time zone
ln -sf /usr/share/zoneinfo/Europe/London /etc/localtime

#Set hostname
echo archpc > /etc/hostname

#Install bootctl
bootctl install

#Configure  EFI
#echo $blkid | sed -n '/sda1/s/.*UUID=\"\([^\"]*\)\".*/\1/p' >> /boot/loader/entries/arch.conf
blkid /dev/sda43 > /boot/loader/entries/arch.conf

rm script*

