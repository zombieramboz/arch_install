#Time zone
ln -sf /usr/share/zoneinfo/Europe/London /etc/localtime

#Set hostname
echo archpc > /etc/hostname

#Install bootctl
bootctl install

#Configure  EFI
echo -e 'title Archlinux/nlinux /vmlinuz-linux/n/initrd /initramfs-linux.img/noptions root=PARTUUID="$(findmnt -fn -o PARTUUID /dev/sda3)"' rw > /boot/loader/entries/arch.conf

rm script*

